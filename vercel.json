{
  "version": 2,
  "builds": [
    { 
      "src": "package.json", 
      "use": "@vercel/vite",
      "config": {
        "distDir": "dist/public"
      }
    },
    { 
      "src": "server/index.ts", 
      "use": "@vercel/node" 
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"],
      "dest": "/server/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}